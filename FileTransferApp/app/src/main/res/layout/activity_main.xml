<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.pcworld.filetransferapp.MainActivity">

    <Button
            android:text="File Sync"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/fileSync"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>

    <Button
            android:text="New User"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/newFile"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/fileSync"
            app:layout_constraintHorizontal_bias="0.0"/>

    <Button
            android:text="Delete User"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/deleteUser"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/newFile"/>

    <Button
            android:text="File Viewer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/FileViewer"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/deleteUser"
            app:layout_constraintHorizontal_bias="0.0"
            />

    <Button
            android:text="Local Files"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/listFiles"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/FileViewer"/>

</android.support.constraint.ConstraintLayout>
