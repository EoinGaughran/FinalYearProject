<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.pcworld.appuserui.MainActivity">

    <Button
            android:text="Test Login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/testButton"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"/>

    <Button
            android:text="AWS List"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/awsButton"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/testButton"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>

    <Button
            android:text="Sql Write"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/sqlButton"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/awsButton"/>

    <Button
            android:text="Read NFC"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/nfcButton"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/sqlButton"/>

    <Button
            android:text="Log Out"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/logOutButton"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/nfcButton"/>

    <Button
            android:text="Display UserDatabase.db"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/displaySql"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/logOutButton"/>

    <Button
            android:text="Upload Databse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/uploadDatabase"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/displaySql"/>

    <TextView
            android:text="No Data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/clientInfo"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"/>

    <Button
            android:text="Test Graph"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/graphTest"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/uploadDatabase"/>

</android.support.constraint.ConstraintLayout>
